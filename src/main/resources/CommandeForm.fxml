<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600" prefWidth="600" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.GestionCommande.CommandeFormController">

    <VBox alignment="CENTER" prefHeight="600" prefWidth="600" spacing="10" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
      <Label text="Commande">
         <font>
            <Font size="56.0" />
         </font>
      </Label>

        <Label fx:id="productNameLabel" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

        <TextField fx:id="nomClientField" prefWidth="400" promptText="Nom client" />
        <TextField fx:id="adresseField" prefWidth="400" promptText="Adresse" />
        <TextField fx:id="telephoneField" prefWidth="400" promptText="Téléphone" />
        <TextField fx:id="quantiteField" prefWidth="400" promptText="Quantité" />

        <Button onAction="#validerCommande" prefWidth="200" text="Valider la commande" />
      <stylesheets>
         <URL value="@styles.css" />
         <URL value="@interface.css" />
      </stylesheets>
    </VBox>
</AnchorPane>
