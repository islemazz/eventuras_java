<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_LEFT" spacing="20" styleClass="user-settings-pane" stylesheets="@../../styles.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.common.UserSettingsController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="User Profile" />
        <GridPane hgap="10" vgap="8">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" prefWidth="120.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label text="Full Name:" GridPane.rowIndex="0" styleClass="settings-label"/>
                <Label fx:id="fullNameLabel" text="N/A" GridPane.columnIndex="1" GridPane.rowIndex="0" styleClass="settings-value"/>

                <Label text="Username:" GridPane.rowIndex="1" styleClass="settings-label"/>
                <Label fx:id="usernameLabel" text="N/A" GridPane.columnIndex="1" GridPane.rowIndex="1" styleClass="settings-value"/>

                <Label text="Email:" GridPane.rowIndex="2" styleClass="settings-label"/>
                <Label fx:id="emailLabel" text="N/A" GridPane.columnIndex="1" GridPane.rowIndex="2" styleClass="settings-value"/>

                <Label text="Birthday:" GridPane.rowIndex="3" styleClass="settings-label"/>
                <Label fx:id="birthdayLabel" text="N/A" GridPane.columnIndex="1" GridPane.rowIndex="3" styleClass="settings-value"/>

                <Label text="Gender:" GridPane.rowIndex="4" styleClass="settings-label"/>
                <Label fx:id="genderLabel" text="N/A" GridPane.columnIndex="1" GridPane.rowIndex="4" styleClass="settings-value"/>

                <Label text="Phone:" GridPane.rowIndex="5" styleClass="settings-label"/>
                <Label fx:id="phoneLabel" text="N/A" GridPane.columnIndex="1" GridPane.rowIndex="5" styleClass="settings-value"/>
                
                <Label text="Level:" GridPane.rowIndex="6" styleClass="settings-label"/>
                <Label fx:id="levelLabel" text="N/A" GridPane.columnIndex="1" GridPane.rowIndex="6" styleClass="settings-value"/>
                
                <Label text="Role:" GridPane.rowIndex="7" styleClass="settings-label"/>
                <Label fx:id="roleLabel" text="N/A" GridPane.columnIndex="1" GridPane.rowIndex="7" styleClass="settings-value"/>
            </children>
        </GridPane>
        <!-- Add buttons for "Edit Profile", "Change Password" later if needed -->
    </children>
</VBox> 