         <padding>
            <Insets top="30" right="30" bottom="30" left="30"/>
         </padding>
         <children>
            <Text id="event-text" fill="#1a237e" strokeType="OUTSIDE" strokeWidth="0.0" text="Statistiques de vos évenements" wrappingWidth="700.0">
               <font>
                  <Font name="Britannic Bold" size="29.0" />
               </font>
            </Text>
            <Region prefHeight="20.0"/>
