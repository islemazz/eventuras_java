                  <VBox styleClass="chart-card" prefHeight="300.0" prefWidth="300.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
                     <padding>
                        <Insets top="15" right="15" bottom="15" left="15"/>
                     </padding>
                     <children>
                        <Label text="Participants par événement" style="-fx-font-size: 16; -fx-font-weight: bold;"/>
                        <Region prefHeight="10.0"/>
                        <BarChart fx:id="participantsChart" prefHeight="220.0" prefWidth="270.0">
                           <xAxis>
                              <CategoryAxis side="BOTTOM" />
                           </xAxis>
                           <yAxis>
                              <NumberAxis side="LEFT" />
                           </yAxis>
                        </BarChart>
                     </children>
                  </VBox>
               </children>
